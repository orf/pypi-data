    "1.0.3": {
        "info": {
            "author": "",
            "author_email": "Vladimir Petrik <vladimir.petrik@cvut.cz>",
            "bugtrack_url": null,
            "classifiers": [
                "Framework :: Robot Framework",
                "Topic :: Scientific/Engineering :: Visualization"
