    "0.0.9": {
        "info": {
            "author": "eons",
            "author_email": "support@eons.llc",
            "bugtrack_url": null,
            "classifiers": [
                "Development Status :: 3 - Alpha",
                "License :: OSI Approved :: MIT License",
